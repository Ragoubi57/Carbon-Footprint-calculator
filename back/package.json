{
  "name": "food-carbon-calculator",
  "version": "0.0.1",
  "description": "Stack: Express + TypeORM + Postgres",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "init-project": "yarn build && yarn start-docker && yarn migration:run && yarn seed",
    "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
    "start": "yarn tsoa:build && ts-node src/server.ts",
    "start:dev": "yarn tsoa:build && ts-node --watch src/server.ts",
    "start:debug": "yarn tsoa:build && ts-node --inspect-brk src/server.ts",
    "start:prod": "yarn build && node dist/src/server.js",
    "start-docker": "docker-compose down --remove-orphans && docker-compose up --remove-orphans -d",
    "build": "yarn tsoa:build && tsc",
    "tsoa:build": "tsoa spec-and-routes",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "cross-env NODE_ENV=test jest --config ./jest.json",
    "test:watch": "jest --watch --config ./jest.json",
    "test:cov": "jest --collectCoverage --config ./jest.json",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_ENV=test jest --config ./test-e2e/jest-e2e.json",
    "typeorm": "ts-node ./node_modules/typeorm/cli -d ./config/dataSource.ts",
    "migration:run": "yarn build && yarn typeorm migration:run",
    "migration:generate": "yarn build && yarn typeorm -- migration:generate ./src/migrations/$migrationName",
    "seed": "ts-node ./src/seed-dev-data.ts"
  },
  "dependencies": {
    "@types/lodash": "^4.14.202",
    "dotenv": "^16.4.4",
    "express": "^5.1.0",
    "lodash": "^4.17.21",
    "pg": "^8.11.3",
    "postgresql": "^0.0.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "tsoa": "^6.6.0",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.2",
    "@types/node": "^24.5.2",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.test\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
  "main": "index.js"
}
